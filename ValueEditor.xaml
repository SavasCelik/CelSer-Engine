<Window
    x:Class="CelSerEngine.ValueEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CelSerEngine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Change Value"
    Width="416"
    Height="147"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Set new value:" />
        <TextBox
            Name="valueTxtBox"
            Grid.Row="1"
            Margin="0,0,0,5"
            Text="TextBox"
            TextWrapping="Wrap" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,5,0"
                Click="OkBtn_Click"
                Content="OK" />
            <Button Click="CancelBtn_Click" Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>
